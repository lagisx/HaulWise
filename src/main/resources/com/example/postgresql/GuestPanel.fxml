<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="760.0" prefWidth="1100.0" style="-fx-background-color: #f8fafc;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.postgresql.Controllers.GuestPanelController">

    <children>

        <!-- ========================== ШАПКА ========================== -->
        <VBox AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <HBox alignment="CENTER_LEFT" prefHeight="76.0" style="-fx-background: linear-gradient(to right, #1e40af, #3b82f6);                          -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 12, 0, 0, 6);">
                <padding>
                    <Insets bottom="12" left="30" right="30" top="12" />
                </padding>

                <Label style="-fx-font-size: 26px; -fx-font-weight: 900;" text="Биржа грузоперевозок">
                    <font>
                        <Font name="System Bold" size="26" />
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Button onMouseClicked="#goAutoriz" style="-fx-background-color: #bae6fd; -fx-text-fill: #1e40af;                                -fx-font-weight: bold; -fx-font-size: 14px;                                -fx-padding: 10 24; -fx-background-radius: 12;                                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 4, 0, 0, 2);                                -fx-cursor: hand;" text="Войти">
                </Button>

                <Button onMouseClicked="#goReg" style="-fx-background-color: #86efac; -fx-text-fill: #166534;                                -fx-font-weight: bold; -fx-font-size: 14px;                                -fx-padding: 10 24; -fx-background-radius: 12;                                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 4, 0, 0, 2);                                -fx-cursor: hand;" text="Регистрация">
                </Button>

                <Button fx:id="logoutButton1" onAction="#goBack" style="-fx-background-color: white; -fx-text-fill: #1e40af;                                -fx-font-weight: bold; -fx-font-size: 14px;                                -fx-padding: 10 24; -fx-background-radius: 12;                                -fx-border-color: #60a5fa; -fx-border-width: 2; -fx-border-radius: 12;                                -fx-cursor: hand;" text="Назад">
                </Button>
            </HBox>

            <!-- Подчеркивание активной вкладки -->
            <HBox prefHeight="4.0" style="-fx-background-color: #60a5fa;">
                <children>
                    <Region prefWidth="180" />
                    <Region prefWidth="120" style="-fx-background-color: #fbbf24;" />
                </children>
            </HBox>
        </VBox>

        <!-- ========================== ОСНОВНОЙ КОНТЕНТ ========================== -->
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background: #f8fafc; -fx-border-color: transparent;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="80">
            <content>
                <VBox fx:id="cargoContainer" spacing="20" style="-fx-padding: 30 40 50 40;                              -fx-background-color: #f8fafc;">

                    <!-- Этот VBox будет заполняться карточками из контроллера -->
                </VBox>
            </content>
        </ScrollPane>

        <!-- ========================== ПЛАШКА "ВОЙДИТЕ, ЧТОБЫ УВИДЕТЬ КОНТАКТЫ" ========================== -->
        <VBox fx:id="guestOverlay" style="-fx-background-color: rgba(255,255,255,0.95);" visible="false" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <padding>
                <Insets bottom="20" top="20" />
            </padding>
            <children>
                <Label alignment="CENTER" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1e40af;" text="Войдите в аккаунт, чтобы видеть контакты и цены" />
                <Button onMouseClicked="#goAutoriz" style="-fx-background-color: #3b82f6; -fx-text-fill: white;                                -fx-font-weight: bold; -fx-font-size: 16px;                                -fx-padding: 12 40; -fx-background-radius: 30;                                -fx-cursor: hand;" text="Войти сейчас" />
            </children>
        </VBox>

    </children>
</AnchorPane>
