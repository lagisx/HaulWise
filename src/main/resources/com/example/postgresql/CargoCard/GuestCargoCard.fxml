<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<AnchorPane prefHeight="136.0" prefWidth="920.0" style="-fx-background: white; -fx-background-radius: 18; -fx-border-color: f3f3f3; -fx-border-radius: 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 16, 0.12, 0, 6);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.postgresql.Controllers.CardControllers.GuestCargoCardController">

    <VBox alignment="CENTER_LEFT" spacing="12" AnchorPane.bottomAnchor="16" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="16">

        <HBox alignment="CENTER_LEFT" spacing="14">
            <Label fx:id="typeLabel" style="-fx-font-size: 15px; -fx-font-weight: 800; -fx-text-fill: #1d4ed8;" text="RUS • Тент" />

            <Label style="-fx-font-size: 28px; -fx-text-fill: #3b82f6; -fx-font-weight: bold;" text="→" />

            <Label fx:id="routeLabel" prefHeight="29.0" prefWidth="163.0" style="-fx-font-size: 18px; -fx-font-weight: 900; -fx-text-fill: #0f172a;" text="Москва → СПб" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label fx:id="vesObemLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #1e293b;" text="20 т • 82 м³" />

            <Label fx:id="tovarLabel" style="-fx-font-size: 14px; -fx-text-fill: #64748b;" text="Стройматериалы" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="16">
            <Label fx:id="zagruzValue" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #475569;" text="Боковая" />

            <Label fx:id="dateValue" style="-fx-font-size: 13px; -fx-font-weight: 600;                           -fx-background-color: #dbeafe; -fx-text-fill: #1e40af;                           -fx-padding: 5 12; -fx-background-radius: 12;" text="25.11 – 30.11" />

            <Label fx:id="cargoTypeLabel" style="-fx-font-size: 13px; -fx-font-weight: 600;                           -fx-background-color: #fef3c7; -fx-text-fill: #92400e;                           -fx-padding: 5 12; -fx-background-radius: 12;" text="Гидроборт" />
        </HBox>
    </VBox>

    <ImageView fx:id="randomImageOnCard" fitHeight="118.0" fitWidth="152.0" layoutY="7.0" preserveRatio="true" AnchorPane.rightAnchor="12.0" AnchorPane.topAnchor="6.0">
        <clip>
            <Rectangle arcHeight="16" arcWidth="16" height="100" width="140" />
        </clip>
    </ImageView>

    <VBox alignment="CENTER" prefHeight="40.0" prefWidth="920.0" style="-fx-background: linear-gradient(to bottom, transparent, #fffbeb);                  -fx-background-color: #fffbeb; -fx-background-radius: 0 0 18 18;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <padding><Insets bottom="10" top="8" /></padding>

        <Label fx:id="priceHidden" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #dc2626;" text="Цена и телефон скрыты" />

        <Label fx:id="contactLabel" style="-fx-font-size: 13px; -fx-text-fill: #92400e;" text="Войдите, чтобы увидеть ставку и контакты" />
    </VBox>

</AnchorPane>
